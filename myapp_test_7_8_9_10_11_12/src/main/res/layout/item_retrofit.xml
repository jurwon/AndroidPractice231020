<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/retrofitProfileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_basic"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/retrofitEmailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="retrofitEmailView"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/retrofitFirstNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="retrofitFirstNameView"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/retrofitLastNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="retrofitLastNameView"
                android:textSize="15sp"/>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>